version: '3.9'
services:
  db:
    container_name: nest_starter_database
    image: mysql:8.0.30
    ports:
      - '3306:3306'
    command: "--innodb_use_native_aio=0"
    environment:
      - MYSQL_ROOT_PASSWORD=secret
      - MYSQL_DATABASE=nest_starter
  cache:
    container_name: nest_starter_redis
    image: redis:alpine
    command: redis-server
    ports:
      - '6379:6379'
    environment:
      - ALLOW_EMPTY_PASSWORD=yes
    depends_on:
      - db
  api:
    container_name: nest_starter
    build:
      dockerfile: Dockerfile
      context: .
    environment:
      APP_PORT: 3000
      CONN_TYPE: mysql
      CONN_HOST: localhost
      CONN_PORT: 3306
      CONN_USERNAME: root
      CONN_PASSWORD: secret
      CONN_DATABASE: nest_starter
      CONN_LOGGING: 'FALSE'
      REDIS_HOST: localhost
      REDIS_PORT: 6379
      REDIS_PASSWORD:
    ports:
      - '3000:3000'
    depends_on:
      - cache